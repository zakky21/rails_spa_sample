<%= turbo_frame_tag @todo do %>
  <%= form_with(model: @todo, class: "contents") do |form| %>
    <div class="ui grid">
      <div class="column ten wide"><%= form.text_field :name %></div>
      <div class="column six wide">
        <%= button_to 'update', todo_path(@todo), method: :patch, class: "ui button" %>
      </div>
    </div>
  <% end %>
<%end%>
